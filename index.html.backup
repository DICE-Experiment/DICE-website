    .chips{display:flex; gap:12px; flex-wrap:wrap; margin-top:20px}
    .chip{background:var(--chip); border:1px solid var(--line); padding:10px 16px; border-radius:999px; font-size:15px; font-weight:500; transition:all .2s}
