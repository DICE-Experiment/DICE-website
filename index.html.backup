  // Language switcher
  let currentLang = localStorage.getItem('lang') || 'es';

  function setLanguage(lang) {
    currentLang = lang;
    localStorage.setItem('lang', lang);
    document.documentElement.setAttribute('lang', lang);

    // Update all elements with data-i18n
    document.querySelectorAll('[data-i18n]').forEach(el => {
      const key = el.getAttribute('data-i18n');
      const keys = key.split('.');
      let value = translations[lang];
      keys.forEach(k => value = value[k]);
      if (value) el.innerHTML = value;
    });

    // Update nav links
    document.querySelectorAll('[data-i18n-nav]').forEach(el => {
      const key = el.getAttribute('data-i18n-nav');
      const value = translations[lang].nav[key];
      if (value) el.textContent = value;
    });

    // Update active language button
    document.querySelectorAll('.lang-option').forEach(opt => {
      opt.classList.toggle('active', opt.getAttribute('data-lang') === lang);
    });
  }

  // Show country details section when navigating to a country
  function handleCountryNavigation() {
    const hash = window.location.hash;
    const countrySection = document.getElementById('paises-detalles');

    if (hash && (hash === '#paises-detalles' || hash.startsWith('#paises-'))) {
      countrySection.style.display = 'block';
    } else {
      countrySection.style.display = 'none';
    }
  }

  // Initialize language on page load
  document.addEventListener('DOMContentLoaded', () => {
    setLanguage(currentLang);

    // Language toggle click handler
    document.querySelectorAll('.lang-option').forEach(opt => {
      opt.addEventListener('click', () => {
        setLanguage(opt.getAttribute('data-lang'));
      });
    });

    // Handle initial hash on page load
    handleCountryNavigation();
  });

  // Listen for hash changes
  window.addEventListener('hashchange', handleCountryNavigation);

  // Last updated stamp
  document.getElementById('last-updated').textContent = new Date().toISOString().slice(0,10);
</script>

<!-- Leaflet JS -->
<script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js" integrity="sha256-20nQCchB9co0qIjJZRGuk2/Z9VM+kNiyxNV1lvTlZBo=" crossorigin=""></script>

<script>
  // Initialize map
  const map = L.map('map', {
    center: [30, 0],
    zoom: 2,
    minZoom: 1,
    maxZoom: 6,
    scrollWheelZoom: false,
    zoomControl: true
  });

  // ISO3 codes for participating countries
  const participatingCountryCodes = [
    'ARG', 'AUT', 'CHL', 'CHN', 'CIV', 'COD', 'COL', 'CZE', 'DEU', 'EGY',
    'ESP', 'FRA', 'GBR', 'GRC', 'HKG', 'HUN', 'ITA', 'JPN', 'KAZ', 'KOR',
    'MDG', 'PAK', 'PER', 'PHL', 'POL', 'PRT', 'QAT', 'RUS', 'SAU', 'SGP',
    'TUR', 'TWN', 'URY', 'USA'
  ];

  // Map ISO3 codes to anchor IDs on countries.html
  const countryAnchors = {
    'ARG': 'argentina',
    'AUT': 'austria',
    'CHL': 'chile',
    'CHN': 'china',
    'CIV': 'cotedivoire',
    'COD': 'congo',
    'COL': 'colombia',
    'CZE': 'czechia',
    'DEU': 'germany',
    'EGY': 'egypt',
    'ESP': 'spain',
    'FRA': 'france',
    'GBR': 'uk',
    'GRC': 'greece',
    'HKG': 'hongkong',
    'HUN': 'hungary',
    'ITA': 'italy',
    'JPN': 'japan',
    'KAZ': 'kazakhstan',
    'KOR': 'korea',
    'MDG': 'madagascar',
    'PAK': 'pakistan',
    'PER': 'peru',
    'PHL': 'philippines',
    'POL': 'poland',
    'PRT': 'portugal',
    'QAT': 'qatar',
    'RUS': 'russia',
    'SAU': 'saudi',
    'SGP': 'singapore',
    'TUR': 'turkey',
    'TWN': 'taiwan',
    'URY': 'uruguay',
    'USA': 'usa'
  };

  // Load world countries GeoJSON - simple test with USA in red
  fetch('https://raw.githubusercontent.com/datasets/geo-countries/master/data/countries.geojson')
    .then(response => {
      console.log('Fetch response:', response);
      return response.json();
    })
    .then(data => {
      console.log('GeoJSON loaded, features:', data.features.length);
      console.log('First feature properties:', data.features[0].properties);

      L.geoJSON(data, {
        style: function(feature) {
          const countryName = feature.properties.name;
          const countryCode = feature.properties['ISO3166-1-Alpha-3'];

          const isParticipating = participatingCountryCodes.includes(countryCode);

          if (isParticipating) {
            console.log('Highlighting:', countryName, countryCode);
          }

          return {
            fillColor: isParticipating ? '#4a7ba7' : '#2d3748',
            weight: 0.5,
            opacity: 1,
            color: '#4a5568',
            fillOpacity: isParticipating ? 0.6 : 0.2
          };
        },
        onEachFeature: function(feature, layer) {
          const countryCode = feature.properties['ISO3166-1-Alpha-3'];
          const isParticipating = participatingCountryCodes.includes(countryCode);

          if (isParticipating) {
            const anchorId = countryAnchors[countryCode];
            layer.bindPopup(`<strong>${feature.properties.name}</strong><br/><span style="font-size:12px; color:#60a5fa;">Click to view details</span>`);

            // Add click handler to navigate to countries.html page
            layer.on('click', function() {
              if (anchorId) {
                window.location.href = `countries.html#${anchorId}`;
              }
            });

            // Add hover effect and cursor pointer
            layer.on({
              mouseover: function(e) {
                const layer = e.target;
                layer.setStyle({
                  fillOpacity: 0.8,
                  fillColor: '#5a8fc7',
                  cursor: 'pointer'
                });
              },
              mouseout: function(e) {
                const layer = e.target;
                layer.setStyle({
                  fillOpacity: 0.6,
                  fillColor: '#4a7ba7'
                });
              }
            });
          }
        }
      }).addTo(map);

      console.log('Map loaded successfully');
    })
    .catch(error => {
      console.error('Error loading countries:', error);
      document.getElementById('map').innerHTML = '<div style="color:red; padding:20px;">Error loading map: ' + error.message + '</div>';
    });
</script>
